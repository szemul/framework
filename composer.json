{
    "name": "szemul/framework",
    "description": "Lightweight framework based on Slim 4 and Symfony console",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "nesbot/carbon": "^2.52.0",
        "php-di/php-di": "^6.3",
        "slim/psr7": "^1.4",
        "slim/slim": "^4.8",
        "szemul/bootstrap": "^1.0.0",
        "szemul/config": "^1.0.1",
        "szemul/dependency-injection": "^v1.0.0",
        "szemul/helper": "^1.2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.4.0",
        "phpunit/phpunit": "^9.5.5"
    },
    "autoload": {
        "psr-4": {
            "Szemul\\Framework\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Szemul\\Framework\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": false
    }
}
